<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accessible Website</title>
    <link rel="stylesheet" href="css/style.css">
    <script>
        // Function to change font size
        function changeFontSize(size) {
            document.body.style.fontSize = size + "px";
            localStorage.setItem("font-size", size); // Save preference
        }

        // Function to increase font size
        function increaseFontSize() {
            let currentSize = parseInt(localStorage.getItem("font-size")) || 16;
            if (currentSize < 24) {
                changeFontSize(currentSize + 2);
            }
        }

        // Function to decrease font size
        function decreaseFontSize() {
            let currentSize = parseInt(localStorage.getItem("font-size")) || 16;
            if (currentSize > 12) {
                changeFontSize(currentSize - 2);
            }
        }

        // Function to reset font size
        function resetFontSize() {
            changeFontSize(16);
        }

        // Apply saved font size on page load
        document.addEventListener("DOMContentLoaded", function () {
            let savedSize = localStorage.getItem("font-size") || 16;
            document.body.style.fontSize = savedSize + "px";
        });
    </script>
</head>
<body>
    <header>
        <nav>
            <a href="home.php">Home</a>
            <a href="about.php">About Us</a>
            <a href="contact.php">Contact</a>
            <button onclick="decreaseFontSize()">A-</button>
            <button onclick="resetFontSize()">A</button>
            <button onclick="increaseFontSize()">A+</button>
        </nav>
    </header>


/* Default font size */
body {
    font-size: 16px;
    transition: font-size 0.2s ease-in-out; /* Smooth transition */
}

/* Buttons for Font Resize */
button {
    padding: 5px 10px;
    margin: 5px;
    border: none;
    background-color: #333;
    color: white;
    cursor: pointer;
}

button:hover {
    background-color: #555;
}



<footer>
    <p>&copy; 2025 Your Website | Accessibility Enabled</p>
</footer>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        let savedSize = localStorage.getItem("font-size") || 16;
        document.body.style.fontSize = savedSize + "px";
    });
</script>
</body>
</html>
